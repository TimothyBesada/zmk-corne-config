            layers = <0>;
        };
    };
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "DEFAULT";
            bindings = <
                &caps_word              &kp Q                &kp W                  &kp F                  &kp P                  &kp B                 &none &none                 &kp J                  &kp L                      &kp U                   &kp Y            &kp LBKT      &kp SQT
                &skq LSHFT              &hml LCTRL A         &hml LEFT_ALT R        &hml LEFT_GUI S        &hml LEFT_SHIFT T      &kp G                 &none &none                 &kp M                  &hmr LSHIFT N              &hmr LGUI E             &hmr LEFT_ALT I  &hmr LCTRL O  &kp SEMI
                &kp BACKSLASH           &kp Z                &kp X                  &kp C                  &kp D                  &kp V                                             &kp K                  &kp H                      &kp COMMA               &kp DOT          &kp FSLH      &exlamation_question_mark
                                                                                    &thumb_layers 5 ESC    &thumb_layers 1 SPACE  &thumb_layers 4 TAB                               &thumb_layers 3 ENTER  &thumb_layers 2 BACKSPACE  &thumb_layers 6 DELETE
            >;
        };

        LAYER1 {
            display-name = "NAVIGATION";
            bindings = <
                &trans        &trans            &trans        &trans        &trans                &kp LG(X)  &none  &none  &trans      &trans    &trans         &trans        &trans     &trans
                &kp TAB       &kp LEFT_CONTROL  &kp LEFT_ALT  &kp LEFT_GUI  &kp LEFT_SHIFT        &kp LG(C)  &none  &none  &kp LG(A)   &kp LEFT  &kp DOWN       &kp UP_ARROW  &kp RIGHT  &trans
                &kp LC(SEMI)  &kp LG(A)         &kp LG(X)     &kp LG(C)     &kp LG(LS(NUMBER_4))  &kp LG(V)                &kp INSERT  &kp HOME  &kp PAGE_DOWN  &kp PAGE_UP   &kp END    &trans
                                                              &trans        &none                 &trans                   &trans      &trans    &trans
            >;
        };

        LAYER2 {
            display-name = "NUMBER";
            bindings = <
                &kp NON_US_BACKSLASH   &kp COMMA  &kp N7        &kp N8         &kp N9        &kp N0      &none  &none    &trans         &trans  &trans  &trans  &trans  &trans
                &kp LS(RIGHT_BRACKET)  &kp DOT    &kp NUMBER_4  &kp N5         &kp NUMBER_6  &kp MINUS   &none  &none    &kp BACKSPACE  &trans  &trans  &trans  &trans  &trans
                &kp RA(RIGHT_BRACKET)  &kp GRAVE  &kp NUMBER_1  &kp NUMBER_2   &kp NUMBER_3  &kp FSLH                    &trans         &trans  &trans  &trans  &trans  &trans
                                                                &kp LS(EQUAL)  &trans        &trans                      &trans         &none   &trans
            >;
        };

        LAYER3 {
            display-name = "EXTRA 1";
            bindings = <
                &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans
                &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans
                &trans &trans &trans &trans &trans &trans               &trans &trans &trans &trans &trans &trans
                                     &trans &trans &trans               &trans &trans &trans       
            >;
        };

        LAYER4 {
            display-name = "WINDOW";
            bindings = <
                &kp LS(LA(LG(V)))             &kp LS(LA(LC(LG(NUMBER_1))))  &kp LS(LA(LC(LG(NUMBER_2))))  &kp LS(LA(LC(LG(NUMBER_3))))  &kp LS(LA(LC(LG(NUMBER_4))))  &kp LS(LA(LC(LG(N5))))    &none  &none   &trans                &trans                    &trans                          &trans                        &trans                     &trans
                &kp LS(LA(LG(N0)))            &kp LS(LA(LG(NUMBER_1)))      &kp LS(LA(LG(NUMBER_2)))      &kp LS(LA(LG(NUMBER_3)))      &kp LS(LA(LG(NUMBER_4)))      &kp LS(LA(LG(NUMBER_5)))  &none  &none   &kp LS(LA(LG(LEFT)))  &kp LS(LA(LC(LG(LEFT))))  &kp LC(LG(LA(LS(DOWN_ARROW))))  &kp LS(LA(LG(LC(UP_ARROW))))  &kp LS(LA(LC(LG(RIGHT))))  &kp LS(LA(LG(RIGHT)))
                &kp LS(LA(LG(LC(NUMBER_6))))  &kp LS(LA(LC(LG(N0))))        &kp LS(LA(LG(NUMBER_6)))      &kp LS(LA(LG(N7)))            &kp LS(LA(LG(N8)))            &kp LS(LA(LG(N9)))                       &kp LS(LA(LG(N)))     &kp LS(LC(LA(LG(M))))     &kp LS(LA(LG(C)))               &kp LS(LA(LC(LG(R))))         &trans                     &trans
                                                                                                          &trans                        &trans                        &none                                    &kp LG(W)             &kp LG(LA(H))             &kp LG(H)
            >;
        };

        LAYER5 {
            display-name = "MUSIC";
            bindings = <
                &trans  &trans  &trans  &trans  &trans  &trans  &none  &none   &trans  &trans    &trans        &trans           &trans              &trans
                &trans  &trans  &trans  &trans  &trans  &trans  &none  &none   &trans  &kp C_RW  &kp C_VOL_DN  &kp C_VOLUME_UP  &kp C_FAST_FORWARD  &trans
                &trans  &trans  &trans  &trans  &trans  &trans                 &trans  &trans    &kp C_MUTE    &trans           &trans              &trans
                                        &none   &trans  &trans                 &trans  &kp C_PP  &trans
